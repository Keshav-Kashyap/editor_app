PORT=3000
NODE_ENV=development

# Max file upload size (in MB)
MAX_FILE_SIZE=500

# AssemblyAI API Key (Required for auto-caption generation)
# Get your API key from: https://www.assemblyai.com/
ASSEMBLYAI_API_KEY=your_api_key_here

# Google Gemini API Key (Optional - for Hinglish conversion)
# Get your FREE API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# FFmpeg path (optional, auto-detected if in PATH)
FFMPEG_PATH=

# Whisper model (tiny, base, small, medium, large)
WHISPER_MODEL=base
